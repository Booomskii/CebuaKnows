@{
    Layout = null;
}

<!doctype html>
<html>
    <head>
        <meta name="viewport" content="width:device-width"/>
        <title>CebuaKnows</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/w3.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark" style="padding:20px;">
            <a class="navbar-brand" asp-action="Index">CebuaKnows</a>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                    <a class="nav-item nav-link active" asp-action="Index">Home <span class="sr-only">(current)</span></a>
                    <div class="dropdown hover-nav">
                        <a class="nav-item nav-link" asp-action="Tour">Tour</a>
                        <div class="dropdown-content">
                            <a asp-action="Heritage">All Local Heritage Sites</a>
                            <a asp-action="Historic">Historic Sites</a>
                            <a asp-action="Religious">Religious Sites</a>
                            <a asp-action="Landmarks">Landmarks</a>
                        </div>
                    </div>
                    <a class="nav-item nav-link" asp-action="History">History</a>
                    <a class="nav-item nav-link" asp-action="Contacts">Contacts</a>
                </div>
            </div>
        </nav>
        <div>
		    <img src="~/images/bg-image.jpg" style="height:100%; width:100%; position:absolute; z-index:-1;"/>
        </div>

        <div class="container rounded text-white bg-dark" style="position:absolute; top:20vh; right:60vw; width:30%; margin:auto; opacity:0.9; padding:50px;">
            <h1 style="margin-bottom:50px; font-size:60px;">Discover Cebu In Its Full Glory</h1>
            <p style="margin-bottom:50px;">We Invite you on a date with the marvelous city of Cebu. It's going to be awesome!</p>
            <a class="btn btn-danger" asp-action="Tour">Learn Now</a>
            
        </div>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </body>
</html>
